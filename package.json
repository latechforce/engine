{
  "name": "@safidea_/engine",
  "description": "Generate web app with a configuration file",
  "version": "0.25.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Thomas JEANNEAU",
  "license": "BSL 1.1",
  "exports": {
    ".": "./dist/index.js",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist/**/*",
    "schemas/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safidea/engine.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/safidea/engine/issues"
  },
  "homepage": "https://github.com/safidea/engine#readme",
  "scripts": {
    "format": "bunx prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint": "bunx eslint . --fix",
    "prebuild": "bunx puppeteer browsers install chrome",
    "build:server": "bun run scripts/server/build.ts",
    "build:client": "bun run scripts/client/build.ts",
    "build:types": "bun run scripts/types/build.ts",
    "build:schemas": "bun run scripts/schemas/build.ts",
    "build:tests": "bun run scripts/tests/build.ts",
    "build:css": "bunx tailwindcss -i ./.storybook/input.css -o ./dist/output.css",
    "build": "bun run build:tests && bun run build:client && bun run build:server && bun run build:types",
    "watch:server": "nodemon --config scripts/server/watch.json",
    "watch:client": "nodemon --config scripts/client/watch.json",
    "watch:types": "nodemon --config scripts/types/watch.json",
    "watch:schemas": "nodemon --config scripts/schemas/watch.json",
    "watch:tests": "nodemon --config scripts/tests/watch.json",
    "watch": "concurrently \"bun run watch:schemas\" \"bun run watch:client\" \"bun run watch:server\" \"bun run watch:types\" \"bun run watch:tests\"",
    "pretest": "bunx playwright install --with-deps",
    "test": "NODE_OPTIONS=--no-deprecation bunx playwright test",
    "test:ui": "bunx playwright test --ui",
    "storybook": "bun run build:css && storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.5",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.19",
    "better-sqlite3": "^11.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.1.6",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "html-react-parser": "^5.1.12",
    "jsdom": "^24.1.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^13.0.3",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "pg-boss": "^9.0.3",
    "postcss": "^8.4.40",
    "puppeteer": "^22.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.45.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@storybook/addon-essentials": "^8.2.7",
    "@storybook/addon-interactions": "^8.2.7",
    "@storybook/addon-links": "^8.2.7",
    "@storybook/addon-onboarding": "^8.2.7",
    "@storybook/blocks": "^8.2.7",
    "@storybook/react": "^8.2.7",
    "@storybook/react-vite": "^8.2.7",
    "@storybook/test": "^8.2.7",
    "@testcontainers/postgresql": "^10.11.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/dompurify": "^3.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^22.1.0",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.6",
    "@types/react-dom": "^18.3.0",
    "@types/smtp-server": "^3.5.10",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^8.2.2",
    "debug": "^4.3.6",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "nodemon": "^3.1.4",
    "openai": "^4.54.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.0.0",
    "storybook": "^8.2.7",
    "typescript-eslint": "^8.0.0",
    "typescript-json-schema": "^0.64.0",
    "xml2js": "^0.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "engines": {
    "bun": "1.1.21",
    "node": "22.5.1",
    "npm": "10.8.2"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
