{
  "name": "@latechforce/engine",
  "description": "Web application generator from a configuration file as a Fair Use NPM package.",
  "version": "0.80.2",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/types.ts",
  "type": "module",
  "author": "Thomas JEANNEAU",
  "license": "Fair Use License",
  "files": [
    "src/**/*",
    "schema/**/*"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/types.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/latechforce/engine.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/latechforce/engine/issues"
  },
  "homepage": "https://github.com/latechforce/engine#readme",
  "scripts": {
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "knip --fix",
    "format": "prettier --write .",
    "example": "bun --watch run script/run-example.ts",
    "website": "cd website && bun start",
    "build:schemas": "bun run script/build-schemas.ts",
    "build:schema": "bun run script/website/build-schema.ts",
    "build:test-report": "bun run script/website/build-test-report.ts",
    "build:blog": "bun run script/website/build-blog.ts",
    "build:guides": "bun run script/website/build-guides.ts",
    "build": "bun run build:schema && bun run build:test-report && bun run build:blog && bun run build:guides",
    "generate:feature": "bun run script/generate-feature.ts",
    "test": "bun test --bail",
    "test:watch": "bun test --watch",
    "test:snapshot": "bun test --update-snapshots",
    "test:coverage": "bun test --coverage",
    "e2e": "bunx playwright test",
    "e2e:ui": "LOG_LEVEL=debug bunx playwright test --ui",
    "e2e:snapshot": "bunx playwright test --update-snapshots",
    "e2e:report": "bunx playwright show-report website/static/playwright-report",
    "db:generate:postgres": "drizzle-kit generate --config config/drizzle-postgres.config.ts",
    "db:generate:sqlite": "drizzle-kit generate --config config/drizzle-sqlite.config.ts",
    "db:generate": "bun run db:generate:postgres && bun run db:generate:sqlite",
    "db:migrate:postgres": "drizzle-kit migrate --config config/drizzle-postgres.config.ts",
    "db:migrate:sqlite": "drizzle-kit migrate --config config/drizzle-sqlite.config.ts",
    "db:migrate": "bun run db:migrate:postgres && bun run db:migrate:sqlite",
    "auth:generate:postgres": "bunx --bun @better-auth/cli generate --output src/infrastructure/db/schema/postgres/auth.ts --config config/better-auth-postgres.config.ts --y",
    "auth:generate:sqlite": "bunx --bun @better-auth/cli generate --output src/infrastructure/db/schema/sqlite/auth.ts --config config/better-auth-sqlite.config.ts --y",
    "auth:generate": "bun run auth:generate:postgres && bun run auth:generate:sqlite",
    "ui:add": "bunx --bun shadcn@latest add",
    "release:test": "semantic-release --dry-run"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@eslint/js": "^9.36.0",
    "@hono/zod-openapi": "^1.1.3",
    "@hono/zod-validator": "^0.7.3",
    "@notionhq/client": "^5.1.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@scalar/hono-api-reference": "^0.9.20",
    "@sentry/bun": "^10.17.0",
    "@tanstack/react-form": "^1.23.5",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.132.33",
    "@tanstack/react-router-devtools": "^1.132.33",
    "@tanstack/react-start": "^1.132.34",
    "@tanstack/react-table": "^8.21.3",
    "@types/json-schema": "^7.0.15",
    "@types/mime-types": "^3.0.1",
    "ajv": "^8.17.1",
    "better-auth": "^1.3.25",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cron": "^4.3.3",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.6",
    "eslint": "^9.36.0",
    "googleapis": "^159.0.0",
    "handlebars": "^4.7.8",
    "hono": "^4.9.9",
    "ky": "^1.11.0",
    "kysely": "^0.28.7",
    "kysely-bun-worker": "^1.2.1",
    "lucide-react": "^0.544.0",
    "mime-types": "^3.0.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.63.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "winston": "^3.18.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.25",
    "@ngrok/ngrok": "^1.5.2",
    "@playwright/test": "^1.55.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testcontainers/postgresql": "^11.7.1",
    "@types/bun": "^1.2.23",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "drizzle-kit": "^0.31.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.64.1",
    "msw": "2.11.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-release": "^24.2.9",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
