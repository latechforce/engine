{
  "name": "@safidea_/engine",
  "description": "Generate web app with a configuration file",
  "version": "0.31.17",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Thomas JEANNEAU",
  "license": "BSL 1.1",
  "exports": {
    ".": "./dist/index.js",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist/**/*",
    "schemas/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safidea/engine.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/safidea/engine/issues"
  },
  "homepage": "https://github.com/safidea/engine#readme",
  "scripts": {
    "format": "bunx prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint": "bunx eslint . --fix",
    "prebuild": "bunx puppeteer browsers install chrome",
    "build:server": "bun run scripts/server/build.ts",
    "build:client": "bun run scripts/client/build.ts",
    "build:types": "bun run scripts/types/build.ts",
    "build:schemas": "bun run scripts/schemas/build.ts",
    "build": "bun run build:client && bun run build:server && bun run build:types",
    "watch:server": "nodemon --config scripts/server/watch.json",
    "watch:client": "nodemon --config scripts/client/watch.json",
    "watch:types": "nodemon --config scripts/types/watch.json",
    "watch:schemas": "nodemon --config scripts/schemas/watch.json",
    "watch": "concurrently \"bun run watch:schemas\" \"bun run watch:client\" \"bun run watch:server\" \"bun run watch:types\"",
    "pretest": "bunx playwright install --with-deps",
    "test": "bunx playwright test",
    "test:ui": "bunx playwright test --ui",
    "test:snapshots": "bunx playwright test --update-snapshots",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@heroicons/react": "^2.1.5",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.10",
    "@sentry/node": "^8.33.1",
    "@sentry/profiling-node": "^8.33.1",
    "adm-zip": "^0.5.16",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^11.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.1.7",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "html-react-parser": "^5.1.18",
    "jsdom": "^25.0.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^14.1.2",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.0",
    "pg-boss": "^10.1.4",
    "postcss": "^8.4.47",
    "puppeteer": "^23.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.13",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "winston-elasticsearch": "^0.19.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@playwright/test": "^1.47.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@testcontainers/postgresql": "^10.13.2",
    "@types/adm-zip": "^0.5.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/dompurify": "^3.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^22.7.4",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.10",
    "@types/react-dom": "^18.3.0",
    "@types/smtp-server": "^3.5.10",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mammoth": "^1.8.0",
    "nodemon": "^3.1.7",
    "pdfreader": "^3.0.5",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.2",
    "storybook": "^8.3.5",
    "typescript-eslint": "^8.8.0",
    "typescript-json-schema": "^0.65.1"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "engines": {
    "bun": "1.1.29",
    "node": "22.9.0",
    "npm": "10.8.3"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
