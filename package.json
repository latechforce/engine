{
  "name": "@latechforce/engine",
  "description": "Web application generator from a configuration file as a Fair Use NPM package.",
  "version": "0.46.4",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "author": "Thomas JEANNEAU",
  "license": "Fair Use License",
  "files": [
    "src/**/*",
    "src/**/*.json",
    "tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/latechforce/engine.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/latechforce/engine/issues"
  },
  "homepage": "https://github.com/latechforce/engine#readme",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "example": "PORT=3000 DATABASE_URL=./data/sqlite.db bun --watch run script/run-example.ts",
    "website": "cd website && bun start",
    "build:static": "bun run script/website/build-static.ts",
    "build:blog": "bun run script/website/build-blog.ts",
    "build:guides": "bun run script/website/build-guides.ts",
    "test": "bun test --bail",
    "test:watch": "bun test --watch",
    "test:snapshot": "bun test --update-snapshots",
    "test:coverage": "bun test --coverage",
    "e2e": "bunx playwright test",
    "e2e:ui": "bunx playwright test --ui",
    "e2e:snapshot": "bunx playwright test --update-snapshots",
    "e2e:report": "bunx playwright show-report website/static/playwright-report",
    "db:generate:postgres": "drizzle-kit generate --config src/infrastructure/db/config/drizzle-postgres.config.ts",
    "db:generate:sqlite": "drizzle-kit generate --config src/infrastructure/db/config/drizzle-sqlite.config.ts",
    "db:generate": "bun run db:generate:postgres && bun run db:generate:sqlite",
    "auth:generate:postgres": "bunx --bun @better-auth/cli generate --output src/infrastructure/db/schema/postgres/auth.ts --config src/infrastructure/db/config/better-auth-postgres.config.ts --y",
    "auth:generate:sqlite": "bunx --bun @better-auth/cli generate --output src/infrastructure/db/schema/sqlite/auth.ts --config src/infrastructure/db/config/better-auth-sqlite.config.ts --y",
    "auth:generate": "bun run auth:generate:postgres && bun run auth:generate:sqlite",
    "ui:add": "bunx --bun shadcn@latest add",
    "release:test": "semantic-release --dry-run"
  },
  "dependencies": {
    "@eslint/js": "^9.27.0",
    "@hono/zod-openapi": "^0.19.6",
    "@hono/zod-validator": "^0.5.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@scalar/hono-api-reference": "^0.8.10",
    "@tanstack/react-query": "^5.76.1",
    "@tanstack/react-router": "^1.120.5",
    "@tanstack/react-router-devtools": "^1.120.6",
    "@tanstack/react-table": "^8.21.3",
    "@types/json-schema": "^7.0.15",
    "ajv": "^8.17.1",
    "better-auth": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.43.1",
    "eslint": "^9.27.0",
    "handlebars": "^4.7.8",
    "hono": "^4.7.10",
    "inversify": "^7.5.1",
    "json-schema-to-zod": "^2.6.1",
    "lucide-react": "^0.511.0",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.3.0",
    "winston": "^3.17.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.2.8",
    "@playwright/test": "^1.52.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@testcontainers/postgresql": "^10.27.0",
    "@types/bun": "^1.2.13",
    "@types/inversify": "^2.0.33",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "bun-plugin-tailwind": "^0.0.15",
    "drizzle-kit": "^0.31.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "ky": "^1.8.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.4",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": "^1.2.0"
  }
}
