{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "account": {
      "type": "string"
    },
    "email": {
      "$ref": "./GoogleMailEmailOptions.schema.json"
    },
    "integration": {
      "type": "string",
      "const": "GoogleMail"
    },
    "action": {
      "type": "string",
      "const": "SendEmail"
    }
  },
  "required": [
    "account",
    "action",
    "email",
    "integration",
    "name"
  ],
  "additionalProperties": false,
  "description": "Sends an email using Google Mail with specified recipients, subject, and content",
  "examples": [
    {
      "integration": "GoogleMail",
      "action": "SendEmail",
      "email": {
        "to": "{{trigger.payload.email}}",
        "cc": [
          "team@example.com"
        ],
        "bcc": [
          "archive@example.com"
        ],
        "subject": "Welcome to our platform",
        "text": "Hello {{trigger.payload.name}}!",
        "html": "<h1>Welcome</h1><p>Hello {{trigger.payload.name}}!</p>",
        "attachments": [
          {
            "filename": "document.pdf",
            "content": "{{trigger.payload.document}}"
          }
        ]
      }
    }
  ],
  "title": "Send Email Action"
}