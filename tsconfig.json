{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Paths
    "baseUrl": ".",
    "paths": {
      "@/types": ["src/types"],
      "@/example": ["example"],
      "@/example/*": ["example/*"],
      "@/e2e/*": ["e2e/*"],
      "@/app/*": ["src/features/app/*"],
      "@/action/*": ["src/features/action/*"],
      "@/automation/*": ["src/features/automation/*"],
      "@/run/*": ["src/features/run/*"],
      "@/trigger/*": ["src/features/trigger/*"],
      "@/form/*": ["src/features/form/*"],
      "@/connection/*": ["src/features/connection/*"],
      "@/table/*": ["src/features/table/*"],
      "@/user/*": ["src/features/user/*"],
      "@/page/*": ["src/features/page/*"],
      "@/shared/*": ["src/shared/*"],
      "@/app": ["src"]
    },

    // inversify
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "test", "example", "script", "e2e", "config", "playwright.config.ts"]
}
